.grid {
  margin: 0 auto;
  max-width: 1270px;
}

.grid-item,
.grid-sizer {
  width: 20%;
}

.grid-item {
  float: left;
  height: 100px;
  background: #0d8;
  border: 2px solid #333;
  border-color: hsla(0, 0%, 0%, 0.7);
  margin: 10px;
}

.grid-item--width2 {
  width: 40%;
}
.grid-item--height2 {
  height: 200px;
}
